<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <LinearLayout
        android:id="@+id/navbar-profile"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#565A97"
        android:orientation="horizontal"
       >


        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="9dp"
            android:background="#565A97"
            android:src="@drawable/ic_arrow_back_black_24dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="12dp"
            android:gravity="center"
            android:text="Profile"
            android:textColor="#fff"
            android:textSize="20dp" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp">

        <View
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="@drawable/bgprofil"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="150dp"
            android:src="@drawable/fotoprofil"
            android:layout_marginLeft="160dp"
            android:layout_marginTop="90dp"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/logofoto"
            android:layout_marginTop="115dp"
            android:layout_marginLeft="165dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            text/>

    </RelativeLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/edit_nama_lengkap"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="20dp"

        >

        <EditText

            style="@style/TextContent.EditLogin"
            android:inputType="text"
            android:hint="Nama Lengkap"/>

    </android.support.design.widget.TextInputLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp">

        <EditText
            android:layout_width="225dp"
            android:layout_height="40dp"
            android:layout_marginLeft="40dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/shape_item"
            android:hint="@string/target"
            android:paddingLeft="18dp"
            android:layout_marginRight="10dp"/>

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/colorAccent"
            android:src="@drawable/plus"
            />
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/red"
            android:src="@drawable/minus"
            />
    </LinearLayout>


    <Button
        style="@style/ButtonGeneral"
        android:text="UPDATE"
        android:layout_marginTop="20dp"
        android:backgroundTint="#67D8C8"
        android:layout_marginBottom="24dp"
        android:textSize="20dp"  />



</LinearLayout>