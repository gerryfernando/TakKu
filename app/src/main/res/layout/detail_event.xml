<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <ImageView
        android:id="@+id/bg_event"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:src="@drawable/bgevent"
        android:layout_marginBottom="22dp"/>


        <TextView
            android:id="@+id/nama_event"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nama Event"
            android:textStyle="bold"
            android:layout_marginLeft="40dp"
            android:textSize="100px"
            android:textColor="#565A97"
            android:layout_marginBottom="20dp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="45dp"

            >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_event"/>

            <TextView
                android:id="@+id/tgl_event"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:text="xx/xx/xxxx"
                />
        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="45dp"
        android:layout_marginTop="10dp"
        >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/person_black"/>
        <TextView
            android:id="@+id/event_person"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:text="nama pelaksana"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="45dp"
        android:layout_marginTop="10dp"
        >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/jumlah_tak"/>

        <TextView
            android:id="@+id/jum_tak"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:text="X Tak"
            />
    </LinearLayout>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginLeft="45dp"
        android:text="hehe"
        />


    <Button
        android:layout_marginTop="27dp"
        style="@style/ButtonGeneral"
        android:layout_marginRight="41dp"
        android:layout_marginLeft="40dp"
        android:text="REMIND THIS EVENT"
        android:backgroundTint="#67D8C8"
        android:layout_marginBottom="24dp"
        android:textSize="20dp"  />

</LinearLayout>