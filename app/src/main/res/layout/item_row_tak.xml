<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_list_tak"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="19dp"
    android:layout_marginEnd="19dp">

    <TextView
        android:id="@+id/tv_jumlah_tak_event"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:text="@string/dummy_jumlah_tak"
        android:textStyle="bold"
        android:textAlignment="textEnd"
        android:maxLines="2"
        android:textColor="@color/colorAccent"
        android:layout_alignParentStart="true"
        android:textSize="16sp"/>

    <LinearLayout
        android:id="@+id/ll_line"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginStart="14dp"
        android:layout_marginEnd="18dp"
        android:layout_toEndOf="@+id/tv_jumlah_tak_event">

        <View
            android:layout_width="4dp"
            android:layout_height="29dp"
            android:background="#EEEEEE"/>

        <ImageView
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:background="@drawable/ic_ellipse"
            android:backgroundTint="#C4C4C4"/>

        <View
            android:id="@+id/v_line_bawah"
            android:layout_width="4dp"
            android:layout_height="68dp"
            android:background="#EEEEEE"/>


    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rl_detail_tak"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:layout_toEndOf="@+id/ll_line">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginEnd="10dp"
            android:layout_alignParentStart="true"
            android:layout_toStartOf="@id/iv_arrow">

            <TextView
                android:id="@+id/tv_event_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Seminar International SEARCH"
                android:textStyle="bold"
                android:textAlignment="viewStart"
                android:maxLines="1"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="16sp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:background="@drawable/ic_event"
                    android:backgroundTint="#555555"
                    android:layout_marginEnd="9dp"/>

                <TextView
                    android:id="@+id/tv_event_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="15/11/2018"
                    android:maxLines="1"
                    android:gravity="center"
                    android:textColor="#555555"
                    android:textSize="16sp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:background="@drawable/person"
                    android:backgroundTint="#555555"
                    android:layout_marginEnd="9dp"/>

                <TextView
                    android:id="@+id/tv_event_organizer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="SEARCH Tel-U"
                    android:maxLines="1"
                    android:gravity="center"
                    android:textColor="#555555"
                    android:textSize="16sp"/>
            </LinearLayout>

        </LinearLayout>

        <ImageView
            android:id="@+id/iv_arrow"
            android:layout_width="12dp"
            android:layout_height="18dp"
            android:layout_marginTop="30dp"
            android:src="@drawable/ic_arrow_right"
            android:layout_alignParentEnd="true"/>
    </RelativeLayout>

</RelativeLayout>