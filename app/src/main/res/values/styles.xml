<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="TextContent" parent="TextAppearance.AppCompat">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="TextContent.Small">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>

    <style name="TextContent.EditLogin">
        <item name="android:layout_marginLeft">@dimen/activity_vertical_margins</item>
        <item name="android:layout_marginRight">@dimen/activity_vertical_margins</item>
        <item name="android:background">@drawable/shape_item</item>
        <item name="android:maxLines">1</item>
        <item name="android:lines">1</item>
        <item name="android:textColorHighlight">@android:color/black</item>
        <item name="android:textSize">16sp</item>
        <item name="android:paddingTop">15dp</item>
        <item name="android:paddingBottom">13dp</item>
        <item name="android:paddingLeft">18dp</item>
        <item name="android:paddingRight">12dp</item>
    </style>

    <style name="TextContent.IconTitle">
        <item name="android:textSize">42sp</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ButtonGeneral" parent="@style/Widget.AppCompat.Button.Colored">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/activity_horizontal_margins</item>
        <item name="android:layout_marginRight">@dimen/activity_horizontal_margins</item>
        <item name="android:background">@drawable/button</item>
        <item name="android:textColor">@android:color/white</item>
    </style>
</resources>
